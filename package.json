{
  "name": "xcaox-maps",
  "version": "1.0.0",
  "description": "XCAOX Maps - Interactive mapping system with POI management and local tile support",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "esbuild src/ts/app.ts --bundle --outfile=dist/js/app.js --format=iife --target=es2018",
    "build:client:watch": "esbuild src/ts/app.ts --bundle --outfile=dist/js/app.js --format=iife --target=es2018 --watch",
    "start": "node dist/server.js",
    "start:ts": "ts-node src/server.ts",
    "dev": "concurrently \"npm run build:client:watch\" \"nodemon --exec ts-node src/server.ts\"",
    "dev:client": "live-server --port=8080",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development", 
    "pm2:stop": "pm2 stop xcaox-maps",
    "pm2:restart": "pm2 restart xcaox-maps",
    "pm2:delete": "pm2 delete xcaox-maps",
    "pm2:logs": "pm2 logs xcaox-maps",
    "pm2:monit": "pm2 monit",
    "test": "echo 'No tests defined'"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "live-server": "^1.2.1",
    "typescript": "^5.1.6",
    "@types/express": "^4.17.17",
    "@types/leaflet": "^1.9.3",
    "@types/node": "^20.4.5",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "esbuild": "^0.18.17",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "leaflet",
    "poi",
    "map",
    "geolocation",
    "xcaox",
    "mapping",
    "tiles",
    "gis"
  ],
  "author": "XCAOX",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}